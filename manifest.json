{
  "manifest_version": 3,
  "name": "Swoosh",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Wallet"
  },
  "background": {
    "service_worker": "src/scripts/background.ts",
    "type": "module"
  },
  "permissions": ["storage", "activeTab", "tabs", "windows"],
  "externally_connectable": {
    "matches": ["http://localhost:5173/*", "https://swoosh-black.vercel.app/*"]
  },
  "host_permissions": [
    "https://api.devnet.solana.com/*",
    "https://ethereum-sepolia-rpc.publicnode.com/*",
    "http://localhost:5173/*",
    "https://swoosh-black.vercel.app/*"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Open Swoosh Wallet"
    }
  }
}
